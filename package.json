{
  "name": "git-flow-merge-action",
  "version": "0.0.0",
  "private": true,
  "description": "merge branch to develop and master branch",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
